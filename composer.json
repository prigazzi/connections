{
    "name": "vonq/user-connections",
    "description": "REST API that deals with users and their connections with other members.",
    "type": "project",
    "authors": [
        {
            "name": "Pablo Rigazzi",
            "email": "pablo.rigazzi@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php-di/php-di": "dev-master",
        "relay/relay": "2.x@dev",
        "zendframework/zend-diactoros": "^1.7@dev",
        "middlewares/fast-route": "dev-master",
        "middlewares/request-handler": "dev-master",
        "ramsey/uuid": "^3.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Vonq\\Api\\": "packages/Api/src",
            "Vonq\\Website\\": "packages/Website/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vonq\\Api\\Tests\\": "packages/Api/tests",
            "Vonq\\Website\\Tests\\": "packages/Website/tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "6.5.x-dev",
        "squizlabs/php_codesniffer": "^3.0@dev"
    }
}
